{
  "name": "@ramon-meffert/svelte-datagrid",
  "license": "MIT",
  "version": "1.0.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ramonmeffert/svelte-datagrid.git"
  },
  "author": {
    "name": "Ramon Meffert",
    "url": "https://r3n.nl"
  },
  "scripts": {
    "dev": "vite dev",
    "prebuild": "sass src/styles:static -s compressed",
    "build": "vite build && bun run package",
    "postbuild": "cp -R src/styles dist && sass dist/styles --no-charset --no-source-map",
    "prebuild:cloudflare": "sass src/styles:static -s compressed",
    "build:cloudflare": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "bun run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^4.0.0"
  },
  "devDependencies": {
    "@picocss/pico": "^2.0.6",
    "@sveltejs/adapter-auto": "^3.2.0",
    "@sveltejs/adapter-cloudflare": "^4.2.0",
    "@sveltejs/kit": "^2.5.5",
    "@sveltejs/package": "^2.3.0",
    "@sveltejs/vite-plugin-svelte": "^3.0.2",
    "@testing-library/svelte": "^4.1.0",
    "@types/slug": "^5.0.8",
    "@typescript-eslint/eslint-plugin": "^7.4.0",
    "@typescript-eslint/parser": "^7.4.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.1",
    "jsdom": "^24.0.0",
    "prettier": "^3.2.5",
    "prettier-plugin-svelte": "^3.2.2",
    "publint": "^0.2.7",
    "sass": "^1.72.0",
    "slug": "^9.0.0",
    "svelte": "^4.2.12",
    "svelte-check": "^3.6.8",
    "svelte-highlight": "^7.6.0",
    "tslib": "^2.6.2",
    "typescript": "^5.4.3",
    "vite": "^5.2.7",
    "vitest": "^1.4.0"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "esm-env": "^1.0.0"
  }
}
