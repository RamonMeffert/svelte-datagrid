{
  "name": "@ramon-meffert/svelte-datagrid",
  "license": "MIT",
  "version": "0.1.0",
  "repository": "github:ramonmeffert/svelte-datagrid",
  "author": {
    "name": "Ramon Meffert",
    "url": "https://r3n.nl"
  },
  "scripts": {
    "dev": "vite dev",
    "prebuild": "sass src/styles:static -s compressed",
    "build": "vite build && bun run package",
    "postbuild": "cp -R src/styles dist && sass dist/styles --no-charset --no-source-map",
    "prebuild:cloudflare": "sass src/styles:static -s compressed",
    "build:cloudflare": "vite build && npm run package",
    "preview": "vite preview",
    "package": "svelte-kit sync && svelte-package && publint",
    "prepublishOnly": "bun run build",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "test:unit": "vitest",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write ."
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "svelte": "./dist/index.js"
    },
    "./styles/*": "./dist/styles/*"
  },
  "files": [
    "dist",
    "!dist/**/*.test.*",
    "!dist/**/*.spec.*"
  ],
  "peerDependencies": {
    "svelte": "^3.54.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^2.0.0",
    "@sveltejs/adapter-cloudflare": "^2.2.2",
    "@sveltejs/kit": "^1.5.0",
    "@sveltejs/package": "^2.0.0",
    "@testing-library/svelte": "^3.2.2",
    "@types/slug": "^5.0.3",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-svelte": "^2.26.0",
    "jsdom": "^22.0.0",
    "prettier": "^2.8.0",
    "prettier-plugin-svelte": "^2.8.1",
    "publint": "^0.1.9",
    "sass": "^1.62.1",
    "svelte": "3.59.1",
    "svelte-check": "^3.0.1",
    "tslib": "^2.4.1",
    "typescript": "^5.0.0",
    "vite": "^4.3.0",
    "vitest": "^0.25.3"
  },
  "svelte": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "type": "module",
  "dependencies": {
    "@picocss/pico": "^1.5.10",
    "esm-env": "^1.0.0",
    "slug": "^8.2.2",
    "svelte-highlight": "^7.2.1"
  }
}
